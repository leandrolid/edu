{
  "name": "@edu/server",
  "version": "0.0.0",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "private": true,
  "scripts": {
    "predev": "yarn env:dev prisma generate",
    "dev": "yarn env:dev nodemon --watch src --ext ts --exec 'ts-node -r tsconfig-paths/register src/index.ts'",
    "seed:dev": "yarn env:dev prisma db seed",
    "migrate:dev": "yarn env:dev prisma migrate dev",
    "env:dev": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@edu/rbac": "*",
    "@edu/env": "*",
    "@fastify/cors": "^11.0.0",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@prisma/client": "6.5.0",
    "bcrypt": "^5.1.1",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "radash": "^12.1.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@edu/eslint": "*",
    "@edu/prettier": "*",
    "@edu/tsconfig": "*",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "prisma": {
    "seed": "yarn env:dev ts-node -r tsconfig-paths/register src/infra/database/seeds/index.ts"
  },
  "prettier": "@edu/prettier",
  "eslintConfig": {
    "extends": [
      "@edu/eslint/base"
    ]
  }
}
